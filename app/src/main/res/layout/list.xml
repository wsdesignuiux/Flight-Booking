<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp">

        <CustomFonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JFK-SFO American Airline"
            android:textColor="@color/textblack"
            android:textSize="11dp"
            android:id="@+id/text_airline"/>

        <CustomFonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6hr 45min, Non-stop"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/subtext_listview"
            android:id="@+id/text_timeschedule"/>

    </LinearLayout>

    <CustomFonts.MyTextView_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7:00-10:00"
       android:layout_marginTop="15dp"
        android:textSize="11dp"
        android:paddingRight="2dp"
        android:textColor="@color/red"
        android:id="@+id/text_time"
        android:gravity="right"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/viewline"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>


