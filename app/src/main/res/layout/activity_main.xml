<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.ws.design.flight_booking.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:background="@color/background">


    <include layout="@layout/toolbar"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="38dp">


                    <CustomFonts.MyTextView_Roboto_Regular
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="VAD"
                        android:textColor="@color/textblack"
                        android:textSize="34dp" />

                    <CustomFonts.MyTextView_Roboto_Regular
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Vadodara"
                        android:textColor="@color/city_name"
                        android:textSize="13.5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:src="@drawable/repeat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="38dp">

                    <CustomFonts.MyTextView_Roboto_Regular
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="DEL"
                        android:textColor="@color/textblack"
                        android:textSize="34dp" />

                    <CustomFonts.MyTextView_Roboto_Regular
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="New Delhi"
                        android:textColor="@color/city_name"
                        android:textSize="13.5dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/roundedcorners"
                android:orientation="vertical"
                android:paddingBottom="25dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/trip_select"
                    android:padding="0.5dp"
                    android:background="@drawable/borderfull">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear1"
                        android:layout_weight="1"
                        android:background="@drawable/top_leftcorner">



                    <CustomFonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="18dp"
                        android:textColor="#fff"
                        android:textSize="13dp"
                        android:id="@+id/textView_round"
                        android:text="Round Trip" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:background="@color/viewline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear2"
                        android:layout_weight="1"
                        >


                    <CustomFonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="18dp"
                        android:textSize="13dp"
                        android:textColor="#837a7a"
                        android:id="@+id/textView_oneway"
                        android:text="One Way" />

                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CustomFonts.MyTextView_Roboto_Regular
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:textSize="13.5dp"
                            android:textColor="@color/dep"
                            android:text="Departure" />

                        <CustomFonts.MyTextView_Roboto_Regular
                            android:id="@+id/Edittext_dep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:textColor="@color/textblack"
                            android:textSize="16dp"
                            android:text="Thu, 20 Nov"
                            android:layout_marginRight="10dp"
                            android:background="#00000000"
                            android:drawablePadding="9dp"
                            android:drawableRight="@drawable/spinner"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"/>

                        <View
                            android:layout_width="130dp"
                            android:layout_height="0.7dp"
                            android:layout_gravity="center"
                            android:background="@color/viewline" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CustomFonts.MyTextView_Roboto_Regular
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:textColor="@color/dep"
                            android:textSize="13.5dp"
                            android:text="Return" />

                        <CustomFonts.MyTextView_Roboto_Regular
                            android:id="@+id/Edittext_return"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="10dp"
                            android:background="#00000000"
                            android:drawableRight="@drawable/spinner"
                            android:textColor="@color/textblack"
                            android:paddingLeft="10dp"
                            android:text="Fri, 21 Nov"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="130dp"
                            android:layout_height="0.7dp"
                            android:layout_gravity="center"
                            android:background="@color/viewline" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CustomFonts.MyTextView_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/dep"
                        android:textSize="13.5dp"
                        android:text="Passengers" />

                    <Spinner
                        android:id="@+id/spinner_dep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/spinner">

                    </Spinner>

                    <View
                        android:layout_width="290dp"
                        android:layout_height="0.7dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:background="@color/viewline" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CustomFonts.MyTextView_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/dep"
                        android:textSize="13.5dp"
                        android:text="Class" />

                    <Spinner
                        android:id="@+id/spinner_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/spinner">

                    </Spinner>

                    <View
                        android:layout_width="290dp"
                        android:layout_height="0.7dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:background="@color/viewline" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="20dp"
                android:background="@color/viewline" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@color/white"
                android:focusable="false"
                android:nestedScrollingEnabled="false">


            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/red"
        android:id="@+id/continue_booking"
        android:layout_alignParentBottom="true">

        <CustomFonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2 people : $188.72"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="13dp"
            android:textColor="@color/white"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <CustomFonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Continue Booking"
            android:layout_weight="1"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="17dp"
            android:src="@drawable/right"/>

    </LinearLayout>





</RelativeLayout>
